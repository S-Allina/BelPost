@model BelPost.Models.User


<head>
    <link rel="stylesheet" href="~/css/Chat.css" />
</head>



<div class="ContainerDialog">
<div class="card-container">
  <div class="card-header">
        <input type="text" id="IdReceiver" hidden value="@Model.Id" />
        <div class="img-avatar">
                @if (@Model.Img != null)
                    {
                <img class="img-avatar" src="data:image/png;base64,@(Convert.ToBase64String(Model.Img))" />
                    }
                    else
                    {
                <img class="img-avatar" src="~/images/Icons/defaulfUser.png" />
                    }
            </div>
        <div class="text-chat"><p id="You">@Model.LastName @Model.FirstName</p></div>
        
  </div>
  <div class="card-body">
        <ul class="messages-container" id="messagesList">
        @*<li class="message-box left">
            Hello, How are you?
        </li>
        <li class="message-box right">
            I'm good, thanks for asking! How about you?
        </li>*@
    </ul>
    <div class="message-input">
                <textarea placeholder="Type your message here" class="message-send" id="messageInput"></textarea>
            <input type="button" id="sendButton" class="button-send" value="Send"/>
    </div>
  </div>
    </div>


</div>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Chat.js"></script>
