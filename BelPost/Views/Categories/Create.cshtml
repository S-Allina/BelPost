@model BelPost.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}


<head>
    <link rel="stylesheet" href="~/css/Form.css" />
</head>
<form class="form" method="post" asp-action="Create" enctype="multipart/form-data">
    <p class="title">Добавление инф листка</p>
    <p class="message">Собирай свои коллекции</p>
    <label>
        <input required="" asp-for="Name" placeholder="" type="text" class="input">
        <span>Название</span>

    </label>
    <span asp-validation-for="Name" class="text-danger"></span>
    <label>
        <span>Описание</span>
        <textarea type="text" asp-for="Description" class="input" ></textarea>

    </label>
    <span asp-validation-for="Description" class="text-danger"></span>

    <label>
        <span>Картинка</span>
        <input type="file" asp-for="ImgFromView" placeholder="" type="file" class="input">

    </label>
    <span asp-validation-for="ImgFromView" class="text-danger"></span>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button class="submitBtn">Добавить</button>
    <a class="submitBtn" asp-action="Index">Назад</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
